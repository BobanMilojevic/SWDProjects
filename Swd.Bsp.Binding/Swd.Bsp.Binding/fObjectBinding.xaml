<Window x:Class="Swd.Bsp.Binding.fObjectBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Swd.Bsp.Binding"
        mc:Ignorable="d"
        Title="fObjectBinding" Height="450" Width="800">
    
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Id}"
                   Margin="2"/>
        <TextBlock Text="{Binding Name}"
                   Margin="2"/>
        <TextBlock Text="{Binding Email}"
                   Margin="2"/>
        <TextBlock Text="{Binding PhoneNumber}"
                   Margin="2"/>
        <Button x:Name="btnGetCustomer"
                Content="Kunde anzeigen"
                Click="BtnGetCustomer_OnClick"/>
    </StackPanel>
</Window>
